<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.LoginActivity"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:background="#1f2946"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/tv_security"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome !"
            android:textSize="30dp"
            android:textStyle="bold"
            android:fontFamily="@font/proximanova"
            android:textColor="#F2F1D3"
            android:gravity="center"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="225dp"
            android:layout_height="225dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/security"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Security Online"
            android:textSize="30dp"
            android:textStyle="bold"
            android:fontFamily="@font/proximanova"
            android:textColor="#F2F1D3"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/tv_security"
        android:padding="10dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#F2F1D3">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLines="1"
                android:imeOptions="actionNext"
                android:textColor="@color/white"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/item1edit_email"
                android:hint="Email" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#F2F1D3"
            app:boxBackgroundColor="#F2F1D3"
            app:passwordToggleTint="#F2F1D3"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:textColor="@color/white"
                android:inputType="textPassword"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/item1edit_password"
                android:hint="Password" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#F7BC13"
        android:text="Login"
        android:layout_below="@id/ln1"
        app:cornerRadius="10dp"
        android:layout_marginHorizontal="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/btn_login"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/ln_rememberme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="6">

            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="Remember Me ?"
                android:fontFamily="@font/proximanova"
                android:textColor="@color/white"/>

        </LinearLayout>



        <TextView
            android:id="@+id/tv_forgetpassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="Forgot Password ?"
            android:textSize="15dp"
            android:fontFamily="@font/proximanova"
            android:textStyle="bold"
            android:textColor="#FF6F5E" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#F2F1D3"
            android:textStyle="bold"
            android:text="Don't have account?"
            android:gravity="center"/>

        <TextView
            android:id="@+id/btn_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#AADCCA"
            android:layout_marginStart="7dp"
            android:text="Sign Up"/>

    </LinearLayout>

</RelativeLayout>